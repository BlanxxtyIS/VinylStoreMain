<div class="drawer-wrapper @(_isOpen ? "slide" : "")">
    <div class="drawer-mask"></div>
    <div class="drawer">
        @if (_activeAlbum is not null)
        {
            <div class="drawer-content">
                @* <img src="@_activeAlbum.Image" /> *@
                <div class="trail-details">
                    <h3>@_activeAlbum.Name</h3>
                    <h6 class="mb-3 text-muted">
                        <span class="oi oi-map-marker"></span>
                        @_activeAlbum.AuthorName
                    </h6>
                    <div class="mt-4">
                        <span class="mr-5">
                            <span class="oi oi-clock mr-2"></span>
                            @_activeAlbum.TimeFormatted
                        </span>
                        <span>
                            <span class="oi oi-infinity mr-2"></span>
                            @_activeAlbum.Rating stars
                        </span>
                    </div>
                    <p class="mt-4">@_activeAlbum.Description</p>
                </div>
            </div>
            <div class="drawer-controls">
                <button class="btn btn-secondary"
                        @onclick="Close"></button>
            </div>
        }
    </div>
</div>

@code {
    private bool _isOpen;
    private Album? _activeAlbum;

    [Parameter, EditorRequired]
    public Album? Album { get; set; }

    protected override void OnParametersSet()
    {
        if (Album != null)
        {
            _activeAlbum = Album;
            _isOpen = true;
        }
    }

    private void Close()
    {
        _activeAlbum = null;
        _isOpen = false;
    }
}